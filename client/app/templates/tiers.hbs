<div class="row">
    <div class="large-12 columns">
      
      <div class="large-9 push-3 columns">
        {{outlet}}
      </div>
      <div class="large-3 pull-9 columns">
        <div class="section-container verticle-nav">
          {{#each tier in controller}}
            {{#linkTo "tier" tier tagName="section"}}
              <p class="title">
                <a href="#">{{tier.name}}</a>
              </p>
            {{/linkTo}}
          {{/each}}
        </div>        
      </div>
    </div>
</div>
